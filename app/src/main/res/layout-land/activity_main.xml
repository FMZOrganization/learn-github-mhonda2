<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/colorBox"
        android:layout_width="199dp"
        android:layout_height="268dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/redSwitch"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="57dp"
        android:checked="true"
        android:theme="@style/RedSwitchTheme"
        app:layout_constraintStart_toEndOf="@+id/colorBox"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/greenSwitch"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="38dp"
        android:checked="true"
        android:theme="@style/GreenSwitchTheme"
        app:layout_constraintStart_toEndOf="@+id/colorBox"
        app:layout_constraintTop_toBottomOf="@+id/redSwitch" />

    <Switch
        android:id="@+id/blueSwitch"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="38dp"
        android:checked="true"
        android:theme="@style/BlueSwitchTheme"
        app:layout_constraintStart_toEndOf="@+id/colorBox"
        app:layout_constraintTop_toBottomOf="@+id/greenSwitch" />

    <SeekBar
        android:id="@+id/redSeekBar"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="25dp"
        android:max="100"
        android:padding="5dp"
        android:saveEnabled="true"
        app:layout_constraintEnd_toStartOf="@+id/redDecimalValue"
        app:layout_constraintStart_toEndOf="@+id/redSwitch"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/greenSeekBar"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="25dp"
        android:max="100"
        android:padding="5dp"
        android:saveEnabled="true"
        app:layout_constraintEnd_toStartOf="@+id/greenDecimalValue"
        app:layout_constraintStart_toEndOf="@+id/greenSwitch"
        app:layout_constraintTop_toBottomOf="@+id/redSeekBar" />

    <SeekBar
        android:id="@+id/blueSeekBar"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="25dp"
        android:max="100"
        android:padding="5dp"
        android:saveEnabled="true"
        app:layout_constraintEnd_toStartOf="@+id/blueDecimalValue"
        app:layout_constraintStart_toEndOf="@+id/blueSwitch"
        app:layout_constraintTop_toBottomOf="@+id/greenSeekBar" />

    <EditText
        android:id="@+id/redDecimalValue"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/exampleValue"
        android:inputType="numberDecimal"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/greenDecimalValue"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/exampleValue"
        android:inputType="numberDecimal"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redDecimalValue" />

    <EditText
        android:id="@+id/blueDecimalValue"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/exampleValue"
        android:inputType="numberDecimal"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenDecimalValue" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="20dp"
        android:text="@string/resetButtonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/colorBox" />

</androidx.constraintlayout.widget.ConstraintLayout>